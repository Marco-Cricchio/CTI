{
  "name": "cyberforge-sentinel-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "install:all": "npm install --workspaces --if-present",
    "dev": "npm run start:dev --workspace=server & npm run start --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}